{
    "suggest": {
        "enablePreselect": true,
        "disableKind": true,
        "disableMenu": true,
        "echodocSupport": true,
        "enablePreview": true
    },
    "diagnostic": {
        "virtualText": true
    },
    "languageserver": {
        "rust": {
            "command": "rust-analyzer",
            "filetypes": ["rust"],
            "rootPatterns": ["Cargo.toml"]
        },
        "ruby": {
            "command": "solargraph",
            "filetypes": ["ruby"],
            "rootPatterns": ["Vagrantfile", "Gemfile.lock"]
        }
    }
}
